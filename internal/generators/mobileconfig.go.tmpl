{{/* https://mosen.github.io/profiledocs/payloads/email.html#com.apple.mail.managed-disableMailRecentsSyncing-auto */}}
{{- define "mobileConfig" -}}
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
	<dict>
		<key>PayloadContent</key>
		<array>
			<dict>
				<key>EmailAccountDescription</key>
				<string>{{ .DisplayName }}</string>
				<key>EmailAccountName</key>
				<string>{{ .DisplayName }}</string>
				<key>EmailAccountType</key>
				<string>EmailTypeIMAP</string>
				<key>EmailAddress</key>
				<string>{{ .Username }}</string>
				<key>IncomingMailServerAuthentication</key>
				<string>EmailAuthPassword</string>
				<key>IncomingMailServerHostName</key>
				<string>{{ .IMAPServer.Hostname }}</string>
				<key>IncomingMailServerPortNumber</key>
				<integer>{{ .IMAPServer.Port }}</integer>
				<key>IncomingMailServerUseSSL</key>
				<{{ isSocketSSLorStartTLS .IMAPServer.SocketType }} />
				<key>IncomingMailServerUsername</key>
				<string>{{ .Username }}</string>
				<key>IncomingPassword</key>
				<string></string>
				<key>OutgoingMailServerAuthentication</key>
				<string>EmailAuthPassword</string>
				<key>OutgoingMailServerHostName</key>
				<string>{{ .SMTPServer.Hostname }}</string>
				<key>OutgoingMailServerPortNumber</key>
				<integer>{{ .SMTPServer.Port }}</integer>
				<key>OutgoingMailServerUseSSL</key>
				<{{ isSocketSSLorStartTLS .SMTPServer.SocketType }} />
				<key>OutgoingMailServerUsername</key>
				<string>{{ .Username }}</string>
				<key>OutgoingPasswordSameAsIncomingPassword</key>
				<true />
				<key>PayloadDescription</key>
				<string>{{ .PayloadDescription }}</string>
				<key>PayloadDisplayName</key>
				<string>{{ .DisplayName }}</string>
				<key>PayloadIdentifier</key>
				<string>{{ .PayloadIdentifier }}</string>
				<key>PayloadOrganization</key>
				<string>{{ .Domain }}</string>
				<key>PayloadType</key>
				<string>{{ .AppleMailAppID }}</string>
				<key>PayloadUUID</key>
				<string>{{ uuid }}</string>
				<key>PayloadVersion</key>
				<integer>1</integer>
				{{- /* Options */}}
				<key>PreventAppSheet</key>
				<false />
				<key>PreventMove</key>
				<false />
				<key>SMIMEEnabled</key>
				<false />
				<key>allowMailDrop</key>
				<true />
				<key>SMIMEEnablePerMessageSwitch</key>
				<false />
				<key>SMIMESigningEnabled</key>
				<false />
				<key>disableMailRecentsSyncing</key>
				<false />
			</dict>
		</array>
		<key>PayloadDescription</key>
		<string>{{ .PayloadDescription }}</string>
		<key>PayloadDisplayName</key>
		<string>{{ .DisplayName }}</string>
		<key>PayloadIdentifier</key>
		<string>{{ .PayloadIdentifier }}</string>
		<key>PayloadOrganization</key>
		<string>{{ .Domain }}</string>
		<key>PayloadRemovalDisallowed</key>
		<false />
		<key>PayloadType</key>
		<string>Configuration</string>
		<key>PayloadUUID</key>
		<string>{{ uuid }}</string>
		<key>PayloadVersion</key>
		<integer>1</integer>
	</dict>
</plist>
{{- end -}}
